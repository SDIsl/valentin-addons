<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <page name="public" position="after">
                <page name="internal_preferences" string="Internal Preferences">
                    <group>
                        <field name="has_dialoga_access"/>
                        <field name="is_trainee"/>
                    </group>
                </page>
            </page>
        </field>
    </record>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="work_phone" position="after">
                <field name="has_dialoga_access"/>
            </field>
        </field>
    </record>
    <record id="view_employee_filter" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <filter name="activities_upcoming_all" position="after">
                <filter name="dialoga_access" string="Has Dialoga access" domain="[('has_dialoga_access','=',True)]"/>
            </filter>
            <filter name="group_job" position="after">
                <filter name="group_is_trainee" string="Is trainee" domain="[]" context="{'group_by':'is_trainee'}"/>
            </filter>
        </field>
    </record>
</odoo>
