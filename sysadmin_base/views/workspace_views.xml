    <record id="workspace_item_view_kanban" model="ir.ui.view">
        <field name="name">workspace.item.view.kanban</field>
        <field name="model">workspace.item</field>
        <field name="arch" type="xml">
            <kanban string="Items" default_group_by="workspace_id">
                <field name="name"/>
                <field name="sn"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content">
                            <b>Name:</b>
                            <field name="name"/>
                            <br/>
                            <b>SN:</b>
                            <field name="sn"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="workspace_item_view_tree" model="ir.ui.view">
        <field name="name">workspace.item.view.tree</field>
        <field name="model">workspace.item</field>
        <field name="arch" type="xml">
            <tree string="Item">
                <field name="name"/>
                <field name="description"/>
                <field name="sn"/>
                <field name="product_id"/>
                <field name="workspace_id"/>
            </tree>
        </field>
    </record>

    <record id="workspace_item_view_form" model="ir.ui.view">
        <field name="name">workspace.item.view.form</field>
        <field name="model">workspace.item</field>
        <field name="arch" type="xml">
            <form string="Item">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="sn"/>
                    </group>
                    <group>
                        <field name="product_id"/>
                        <field name="workspace_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
