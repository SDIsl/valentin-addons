<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="action_list_catalogue" model="ir.actions.act_window">
        <field name="name">Catalogue</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="context">{'search_default_internal_equipment':1}</field>
    </record>

    <record id="action_list_employees" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="action_list_workspaces" model="ir.actions.act_window">
        <field name="name">Workspaces</field>
        <field name="res_model">workspace.workspace</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_list_items" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">workspace.item</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_list_workspace_items" model="ir.actions.act_window">
        <field name="name">Workspace Items</field>
        <field name="res_model">workspace.item</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[('workspace_id.employee_ids.user_id', '=', uid)]</field>
    </record>


    <menuitem id="menu_sysadmin_root" name="SysAdmin" groups="group_sysadmin,group_workspace"/>

    <menuitem id="menu_internal_equipment_products" name="Catalogue" parent="menu_sysadmin_root" groups="group_sysadmin" action="action_list_catalogue" sequence="1"/>
    <menuitem id="menu_employees" name="Employees" parent="menu_sysadmin_root" groups="group_sysadmin" action="action_list_employees" sequence="2"/>
    <menuitem id="menu_workspaces" name="Workspaces" parent="menu_sysadmin_root" groups="group_sysadmin" action="action_list_workspaces" sequence="3"/>
    <menuitem id="menu_items" name="Items" parent="menu_sysadmin_root" groups="group_sysadmin" action="action_list_items" sequence="4"/>
    <menuitem id="menu_workspace_items" name="Workspace Items" parent="menu_sysadmin_root" groups="group_workspace" action="action_list_workspace_items" sequence="5"/>

</odoo>
