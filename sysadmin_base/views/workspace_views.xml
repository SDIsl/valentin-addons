<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="workspace_workspace_view_tree" model="ir.ui.view">
        <field name="name">workspace.workspace.view.tree</field>
        <field name="model">workspace.workspace</field>
        <field name="arch" type="xml">
            <tree string="Workspace">
                <field name="name"/>
                <field name="description"/>
                <field name="location"/>
                <field name="item_count"/>
                <field name="employee_ids"/>
            </tree>
        </field>
    </record>

    <record id="workspace_workspace_view_form" model="ir.ui.view">
        <field name="name">workspace.workspace.view.form</field>
        <field name="model">workspace.workspace</field>
        <field name="arch" type="xml">
            <form string="Workspace">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="workspace_item_count" icon="fa-th-list" type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="item_count"/>
                                </span>
                                <span class="o_stat_text">Items</span>
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Information" name="workspace_information">
                            <group>
                                <field name="location"/>
                            </group>
                        </page>
                        <page string="Employees" name="workspace_employees">
                            <field name="employee_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="has_dialoga_access"/>
                                    <field name="is_trainee"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

