<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <page name="public" position="after">
                <page name="internal_tools" string="Internal Tools">
                    <group>
                        <field name="has_dialoga_access"/>
                        <field name="is_trainee"/>
                    </group>
                    <notebook>
                        <page name="employee_items" string="Items">
                            <field name="item_ids" context="{'default_employee_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="sn"/>
                                    <field name="product_id"/>
                                    <field name="workspace_id"/>
                                    <field name="workspace_location"/>
                                    <field name="subsidy_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="employee_workspaces" string="Workspaces">
                            <field name="workspace_ids" context="{'default_employee_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="location"/>
                                    <field name="item_ids"/>
                                    <field name="employee_ids"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </page>
        </field>
    </record>

    <record id="view_employee_tree" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="work_phone" position="after">
                <field name="has_dialoga_access"/>
                <field name="is_trainee"/>
            </field>
        </field>
    </record>

    <record id="view_employee_filter" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <filter name="activities_upcoming_all" position="after">
                <filter name="dialoga_access" string="Has Dialoga access" domain="[('has_dialoga_access','=',True)]"/>
            </filter>
            <filter name="group_job" position="after">
                <filter name="group_is_trainee" string="Is trainee" domain="[]" context="{'group_by':'is_trainee'}"/>
            </filter>
        </field>
    </record>

</odoo>
